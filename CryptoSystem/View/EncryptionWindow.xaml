<Window x:Class="CryptoSystem.View.EncryptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoSystem.ViewModel"
        xmlns:coverters="clr-namespace:CryptoSystem.Converters"
        mc:Ignorable="d"
        Title="EncryptionWindow" Height="300" Width="400" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <local:EncryptionDialogVM/>
    </Window.DataContext>
    
    <Window.Resources>
        <coverters:RadioIntToKeySizeConverter x:Key="radioIntToKeySizeConverter"/>
        <coverters:RadioIntToSymmetricModeConverter x:Key="radioIntModeConverter"/>
        <coverters:BigIntConverter x:Key="bigIntConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="File to encrypt: " Width="80"/>
                <TextBlock Margin="20, 0, 20, 0" Text="{Binding EncryptionInfo.FileToEncrypt, Mode=TwoWay}" MinWidth="100" Width="Auto"/>
                <Button Content="Load" Command="{Binding OnLoadFileToEncrypt}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Result file: "  Width="80"/>
                <TextBlock Margin="20, 0, 20, 0" Text="{Binding EncryptionInfo.ResultEncryptFile, Mode=TwoWay}" MinWidth="100" Width="Auto"/>
                <Button Content="Save" Command="{Binding OnSaveResultFile}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Secret a: " Width="80" HorizontalAlignment="Center"/>
                <TextBox Margin="20, 0, 20, 0" Text="{Binding EncryptionInfo.SecretA, Converter={StaticResource bigIntConverter}, Mode=TwoWay}" MinWidth="80" Width="Auto"/>
            </StackPanel>
                
            
            
            <TextBlock Text="Key size (bits)" HorizontalAlignment="Center" Margin="0, 15, 0, 5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <RadioButton FlowDirection="RightToLeft" GroupName="Languages" Content="128" IsChecked="{Binding Path=EncryptionInfo.KeySize, Converter={StaticResource radioIntToKeySizeConverter}, ConverterParameter=128, Mode=TwoWay}" Margin="50, 0, 50, 0"/>
                <RadioButton FlowDirection="RightToLeft" GroupName="Languages" Content="192" IsChecked="{Binding Path=EncryptionInfo.KeySize, Converter={StaticResource radioIntToKeySizeConverter}, ConverterParameter=192, Mode=TwoWay}" Margin="50, 0, 50, 0"/>
                <RadioButton FlowDirection="RightToLeft" GroupName="Languages" Content="256" IsChecked="{Binding Path=EncryptionInfo.KeySize, Converter={StaticResource radioIntToKeySizeConverter}, ConverterParameter=256, Mode=TwoWay}" Margin="50, 0, 50, 0"/>
            </StackPanel>

            <TextBlock Text="Encryption mode" HorizontalAlignment="Center" Margin="0, 15, 0, 5"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <RadioButton GroupName="Modes" Content="CBC" FlowDirection="RightToLeft"  IsChecked="{Binding Path=EncryptionInfo.SymmetricMode, Converter={StaticResource radioIntModeConverter}, ConverterParameter=1, Mode=TwoWay}" Margin="0, 0 ,0, 0"/>
                <RadioButton GroupName="Modes" Content="CFB" FlowDirection="RightToLeft"  IsChecked="{Binding Path=EncryptionInfo.SymmetricMode, Converter={StaticResource radioIntModeConverter}, ConverterParameter=2, Mode=TwoWay}" Margin="15, 0 ,0, 0"/>
                <RadioButton GroupName="Modes" Content="OFB" FlowDirection="RightToLeft"  IsChecked="{Binding Path=EncryptionInfo.SymmetricMode, Converter={StaticResource radioIntModeConverter}, ConverterParameter=3, Mode=TwoWay}" Margin="15, 0 ,0, 0"/>
                <RadioButton GroupName="Modes" Content="CTR" FlowDirection="RightToLeft"  IsChecked="{Binding Path=EncryptionInfo.SymmetricMode, Converter={StaticResource radioIntModeConverter}, ConverterParameter=4, Mode=TwoWay}" Margin="15, 0 ,0, 0"/>
                <RadioButton GroupName="Modes" Content="RD"  FlowDirection="RightToLeft"  IsChecked="{Binding Path=EncryptionInfo.SymmetricMode, Converter={StaticResource radioIntModeConverter}, ConverterParameter=5, Mode=TwoWay}" Margin="15, 0 ,0, 0"/>
                <RadioButton GroupName="Modes" Content="RD-H" FlowDirection="RightToLeft" IsChecked="{Binding Path=EncryptionInfo.SymmetricMode, Converter={StaticResource radioIntModeConverter}, ConverterParameter=6, Mode=TwoWay}" Margin="15, 0 ,0, 0" />
            </StackPanel>                                                    

        </StackPanel>
        <Button Grid.Row="1" Grid.Column="1" Content="Encrypt" VerticalAlignment="Bottom" Margin="0, 0, 0, 10" Command="{Binding OnMakeEncryption}" Click="OnMakeEncryptionClicked"/>
    </Grid>
</Window>
